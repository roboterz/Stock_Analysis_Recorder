<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trans_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0.5dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="7dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_transaction_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_code_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="AAA"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.125"/>

        <TextView
            android:id="@+id/tv_sell_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="23.9"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/tv_code_value"
            app:layout_constraintWidth_percent="0.125"/>

        <TextView
            android:id="@+id/tv_buy_bottom_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="23"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/tv_sell_value"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/tv_buy_top_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="24"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/tv_buy_bottom_value"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/tv_bomb_point_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="26"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/tv_buy_top_value"
            app:layout_constraintWidth_percent="0.125" />

        <TextView
            android:id="@+id/tv_stress_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="30"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/tv_bomb_point_value"
            app:layout_constraintWidth_percent="0.125" />

        <TextView
            android:id="@+id/tv_direction_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:pointerIcon="hand"
            android:text="涨/跌"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/tv_stress_value"
            app:layout_constraintWidth_percent="0.125" />

        <TextView
            android:id="@+id/tv_star_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:pointerIcon="hand"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/tv_direction_value"
            app:layout_constraintWidth_percent="0.125" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>